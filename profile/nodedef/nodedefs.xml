<nodeDefs>
    <!-- NODE DEF from 5.0 document http://wiki.universal-devices.com/index.php?title=V50_MAIN -->
    <!-- controller -->
    <nodeDef id="avController" nls="ctl">
        <editors/>
        <sts>
            <st id="ST" editor="bool"/>
            <!-- Version Major -->
            <st id="GV1" editor="I_FLOAT"/>
            <!-- Version Minor -->
            <st id="GV2" editor="I_FLOAT"/>
            <!-- Device Count -->
            <st id="GV3" editor="I_INTEGER"/>
            <!-- Heartbeat -->
            <st id="GV4" editor="I_HB"/>
            <!-- Debug (Log) Mode -->
            <st id="GV5" editor="I_DM"/>
        </sts>
        <cmds>
            <sends/>
            <accepts>
                <cmd id="SET_DM">
                    <p id="" editor="I_DM" init="GV6"/>
                </cmd>
                <cmd id="DISCOVER"/>
                <cmd id="REMOVE_NOTICES_ALL"/>
                <cmd id="UPDATE_PROFILE"/>
            </accepts>
        </cmds>
    </nodeDef>
    <nodeDef id="GENERIC" nls="generic">
        <editors/>
        <sts>
            <st id="ST" editor="bool"/>
            <!-- Device Type -->
            <st id="GV1" editor="I_DEVICE_TYPE"/>
            <!-- Power -->
            <st id="GV2" editor="I_ON_OFF"/>
            <!-- Mute -->
            <st id="GV3" editor="I_ON_OFF"/>
            <!-- Volume -->
            <st id="GV4" editor="I_VOLUME"/>
            <!-- Input Source -->
            <st id="GV5" editor="I_SOURCE"/>
        </sts>
        <cmds>
            <sends/>
            <accepts>
                <cmd id="SET_POWER">
                    <p id="" editor="I_DM" init="GV2"/>
                </cmd>
            </accepts>
        </cmds>
    </nodeDef>
    <nodeDef id="VSX1021" nls="vsx1021">
        <editors/>
        <sts>
            <!-- Device Type -->
            <st id="GV1" editor="I_DEVICE_TYPE"/>
            <!-- Status -->
            <st id="ST" editor="bool"/>
            <!-- Input -->
            <st id="GV5" editor="I_VSX1021_SOURCE"/>
            <!-- Power -->
            <st id="GV2" editor="I_ON_OFF"/>
            <!-- Mute -->
            <st id="GV3" editor="I_ON_OFF"/>
            <!-- Volume -->
            <st id="GV4" editor="I_VSX1021_DB_VOLUME_FLOAT"/>
        </sts>
        <cmds>
            <sends/>
            <accepts>
                <cmd id="SET_POWER">
                    <p id="" editor="I_ON_OFF" init="GV2"/>
                </cmd>
                <cmd id="SET_MUTE">
                    <p id="" editor="I_ON_OFF" init="GV3"/>
                </cmd>
                <cmd id="SET_VOLUME">
                    <p id="" editor="I_VSX1021_DB_VOLUME_LIST" init="GV4"/>
                </cmd>
                <cmd id="SET_SOURCE">
                    <p id="" editor="I_VSX1021_SOURCE" init="GV5"/>
                </cmd>
            </accepts>
        </cmds>
    </nodeDef>

    <nodeDef id="BRAVIA" nls="bravia">
        <editors/>
        <sts>
            <!-- Device Type -->
            <st id="GV1" editor="I_DEVICE_TYPE"/>
            <!-- Status -->
            <st id="ST" editor="bool"/>
            <!-- Input -->
            <st id="GV5" editor="I_BRAVIA_SOURCE"/>
            <!-- Power -->
            <st id="GV2" editor="I_ON_OFF"/>
            <!-- Mute -->
            <st id="GV3" editor="I_ON_OFF"/>
            <!-- Volume -->
            <st id="GV4" editor="I_VOLUME"/>
        </sts>
        <cmds>
            <sends/>
            <accepts>
                <cmd id="SET_POWER">
                    <p id="" editor="I_ON_OFF" init="GV2"/>
                </cmd>
                <cmd id="SET_MUTE">
                    <p id="" editor="I_ON_OFF" init="GV3"/>
                </cmd>
                <cmd id="SET_VOLUME">
                    <p id="" editor="I_VOLUME" init="GV4"/>
                </cmd>
                <cmd id="SET_SOURCE">
                    <p id="" editor="I_BRAVIA_SOURCE" init="GV5"/>
                </cmd>
            </accepts>
        </cmds>
    </nodeDef>
</nodeDefs>
